{
  "manifest_version": 2,
  "version": "{{version}}",
  "name": "{{name}}",
  "description": "{{description}}",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [ "background.js" ]
  },
  "externally_connectable": {
    "matches": [ "{{proto}}://{{domain}}/*" ]
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ]
}
