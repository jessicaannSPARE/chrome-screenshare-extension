{
  "name": "chrome-screenshare-extension",
  "version": "1.0.0-dev",
  "description": "Twilio's own screenshare extension.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build",
    "build:api": "mkdir -p build && node scripts/buildapi.js",
    "build:extension": "mkdir -p build/extension && cp src/icon.png build/extension && node scripts/buildextension.js",
    "test:server": "python -m SimpleHTTPServer 8080 &",
    "test:run": "/Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome http://localhost:8080/test/ --load-extension=build/extension &"
  },
  "repository": {
    "type": "git",
    "url": "https://code.hq.twilio.com/mmalavalli/chrome-screenshare-extension.git"
  },
  "author": "Manjesh Malavalli <mmalavalli@twilio.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "handlebars": "^4.0.6"
  }
}
